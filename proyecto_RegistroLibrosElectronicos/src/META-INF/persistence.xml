<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

	<persistence-unit name="PE">
		<!-- Proveedor JPA -->
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<!-- Entidades (Clases) -->
			<class>edu.cibertec.entity.Usuario</class>
			<class>edu.cibertec.entity.Sede</class>
			<class>edu.cibertec.entity.Editorial</class>
			<class>edu.cibertec.entity.Libro</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/bd_LibrosElectronicos" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="mysql" />
			<!-- Dialecto MySql -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<!-- Para ver el log de hibernate -->
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>

